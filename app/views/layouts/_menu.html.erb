<% if @project && @project.key %>
  <%= cache ["v1", "menu", current_user, @project, is_collaborator?] do %>
    <ul class="nav">
        <li><%= link_to "Backlog", main_app.issues_path(:user => @project.user.username, :key => @project.key) %></li>
        <li><%= link_to "Planning", main_app.sprints_path(:user => @project.user.username, :key => @project.key) if is_collaborator? %></li>
        <li><%= link_to "Current Sprint", main_app.current_sprints_path(:user => @project.user.username, :key => @project.key) %></li>
        <li><%= link_to "Reports", main_app.reports_path(:user => @project.user.username, :key => @project.key) if is_collaborator? %></li>
        <li><%= link_to "Admin", main_app.admin_project_path(:user => @project.user.username, :key => @project.key), :class => 'admin-link' if @project.user == current_user %></li>
    </ul>
  <% end %>
<% end %>
